<Window x:Class="Kurs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kurs"
        mc:Ignorable="d"
        Title="MainWindow" Height="324" Width="1190">
    <TabControl>
        <TabItem Header="Исходные данные">
            <TabItem.Content>
                <ScrollViewer>
                    <Grid ShowGridLines="True" ScrollViewer.CanContentScroll="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Column="0" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" TextWrapping="Wrap"
                                            FontFamily="Times New Roman" FontSize="14" FontWeight="Normal"
                                            TextTrimming="CharacterEllipsis" Margin="0,10,0,10" HorizontalAlignment="Center">
                                    Коэффициенты полиномов исходной передаточной функции
                            </TextBlock>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" FontFamily="Times New Roman" FontStyle="Italic" FontSize="14">B(s)</Label>
                                <TextBox x:Name="BTextBox" Grid.Row="1"
                                                FontFamily="Times New Roman"
                                                Margin="5,4,10,0" Height="18" VerticalAlignment="Top">123
                                </TextBox>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" FontFamily="Times New Roman" FontStyle="Italic" FontSize="14">A(s)</Label>
                                <TextBox x:Name="ATextBox" Grid.Row="1"
                                                FontFamily="Times New Roman"
                                                Margin="5,4,10,0" Height="18" VerticalAlignment="Top">123
                                </TextBox>
                            </Grid>
                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" TextWrapping="Wrap"
                                            FontFamily="Times New Roman" FontSize="14" FontWeight="Normal"
                                            TextTrimming="CharacterEllipsis" Margin="0,0,0,10" HorizontalAlignment="Center">
                                    Диапазон частоты запаса
                            </TextBlock>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" FontFamily="Times New Roman" FontSize="14">Начальное значение</Label>
                                <TextBox x:Name="InitialValueTextBox" Grid.Row="1"
                                                FontFamily="Times New Roman"
                                                Margin="5,4,10,0" Height="18" VerticalAlignment="Top">123
                                </TextBox>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" FontFamily="Times New Roman" FontSize="14">Конечное значение</Label>
                                <TextBox x:Name="EndValueTextBox" Grid.Row="1"
                                                FontFamily="Times New Roman"
                                                Margin="5,4,10,0" Height="18" VerticalAlignment="Top">123
                                </TextBox>
                            </Grid>
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" FontFamily="Times New Roman" FontSize="14">Число шагов</Label>
                                <TextBox x:Name="NumStepsTextBox" Grid.Row="1"
                                                FontFamily="Times New Roman"
                                                Margin="5,4,10,0" Height="18" VerticalAlignment="Top">123
                                </TextBox>
                            </Grid>
                        </Grid>
                        <Grid Grid.Column="2" Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" TextWrapping="Wrap"
                                            FontFamily="Times New Roman" FontSize="14" FontWeight="Normal"
                                            TextTrimming="CharacterEllipsis" Margin="0,0,0,10" HorizontalAlignment="Center">
                                    Желаемые показатели качества
                            </TextBlock>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" FontFamily="Times New Roman" FontSize="14">Коэффициент скоростной ошибки</Label>
                                <TextBox x:Name="VelocityErrorCoefTextBox" Grid.Row="1"
                                                FontFamily="Times New Roman"
                                                Margin="5,4,10,0" Height="18" VerticalAlignment="Top">123
                                </TextBox>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" FontFamily="Times New Roman" FontSize="14">Запас по амплитуде</Label>
                                <TextBox x:Name="AmplitudeAmortTextBox" Grid.Row="1"
                                                FontFamily="Times New Roman"
                                                Margin="5,4,10,0" Height="18" VerticalAlignment="Top">123
                                </TextBox>
                            </Grid>
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Label Grid.Row="0" FontFamily="Times New Roman" FontSize="14">Запас по фазе</Label>
                                <TextBox x:Name="PhaseAmortTextBox" Grid.Row="1"
                                                FontFamily="Times New Roman"
                                                Margin="5,4,10,0" Height="18" VerticalAlignment="Top">123
                                </TextBox>
                            </Grid>
                        </Grid>
                        <Grid Grid.Column="3" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.41*"/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" TextWrapping="Wrap"
                            FontFamily="Times New Roman" FontSize="14" FontWeight="Normal"
                            TextTrimming="CharacterEllipsis" Margin="0,0,0,10" HorizontalAlignment="Center">
                                    Граничный уровень фазы
                            </TextBlock>
                            <TextBox x:Name="PhaseBorderLevelTextBox" Grid.Row="1"
                                FontFamily="Times New Roman"
                                Margin="5,4,10,0" Height="18" VerticalAlignment="Top">123
                            </TextBox>
                            <Button x:Name="CalculateButton" Grid.Row="2" Content="Рассчитать" FontFamily="Times New Roman" FontSize="18" Click="CalculateButton_Click" />
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </TabItem.Content>
        </TabItem>
    </TabControl>
</Window>
